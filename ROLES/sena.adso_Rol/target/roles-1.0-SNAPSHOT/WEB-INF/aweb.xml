<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Configuración general -->
    <display-name>Biblioteca Municipal Duitama</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlets de Autenticación -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>sena.adso.roles.controlador.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/auth/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>sena.adso.roles.controlador.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/auth/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>sena.adso.roles.controlador.RegistroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/auth/registro</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LibroServlet</servlet-name>
        <url-pattern>/admin/libros/listar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
           <servlet-name>LibroServlet</servlet-name>
           <url-pattern>/admin/libros/agregar</url-pattern>
       </servlet-mapping>
    <servlet-mapping>
           <servlet-name>LibroServlet</servlet-name>
           <url-pattern>/admin/libros/editar</url-pattern>
       </servlet-mapping>



    <!-- Servlets de Administración -->
    <servlet>
        <servlet-name>LibroServlet</servlet-name>
        <servlet-class>sena.adso.roles.controlador.LibroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LibroServlet</servlet-name>
        <url-pattern>/admin/libros/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PrestamoServlet</servlet-name>
        <servlet-class>sena.adso.roles.controlador.PrestamoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrestamoServlet</servlet-name>
        <url-pattern>/admin/prestamos/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>sena.adso.roles.controlador.UsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/admin/usuarios/*</url-pattern>
    </servlet-mapping>

    <!-- Filtros -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>sena.adso.roles.filtro.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/lector/*</url-pattern>
        <url-pattern>/auth/password</url-pattern>
    </filter-mapping>



    <!-- Configuración de sesión -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- Configuración de seguridad (opcional) -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Resources</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <url-pattern>/lector/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
            <role-name>lector</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/WEB-INF/auth/login.jsp</form-login-page>
            <form-error-page>/WEB-INF/auth/login.jsp?error=true</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <role-name>lector</role-name>
    </security-role>



    
</web-app>